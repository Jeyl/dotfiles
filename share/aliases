alias grep="grep    --color=always"
alias grepf="grep   --color=auto"
alias fgrep="fgrep  --color=always"
alias fgrepf="fgrep --color=auto"
alias egrep="egrep  --color=always"
alias egrepf="egrep --color=auto"

alias ll="ls  -hlv  --color=always --group-directories-first"
alias llf="ls -hlv  --color=auto   --group-directories-first"
alias l="ls   -hlv  --color=always --group-directories-first"
alias lf="ls  -hlv  --color=auto   --group-directories-first"
alias la="ls  -hlva --color=always --group-directories-first"
alias laf="ls -hlva --color=auto   --group-directories-first"

## Shortcuts for most used commands
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias c="cd"
alias s="ssh"
alias m="mosh"

## Prevent overwriting
alias mv="mv -i"
alias cp="cp -i"

## Allow colors in less
alias less="less -R"

alias sml="rlwrap -p'green' sml"
alias r="R"
alias feh="feh --scale-down"
alias anki="anki -b $HOME/local/anki"

alias setprinted="setfattr -n user.printed -v 'printed' "
alias clearprinted="setfattr -x user.printed "
