#!/bin/bash
device="alsa_output.pci-0000_00_1b.0.analog-stereo"

function status() {
	if [ $(pacmd dump | sed -n 's/set-sink-mute '${device}' \(.*\)/\1/p') == "no" ]
	then
		echo $(( $(pacmd dump | sed -n 's/set-sink-volume '${device}' \(.*\)/\1/p') * 100 / 0xFFFF ))"%"
	else
		echo "mute"
	fi
}

case "$1" in
	"up")    # increase volume by 1000
		pacmd dump | awk --non-decimal-data '$1~/set-sink-volume/{if ($2~/'${device}'/) {if ($3+1638 > 65535) {system ("pactl "$1" '${device}' "65535)} else {system ("pactl "$1" '${device}' "$3+1638)}}}'
		;;
	"down")  # decrease volume by 1000
		pacmd dump | awk --non-decimal-data '$1~/set-sink-volume/{if ($2~/'${device}'/) {if ($3-1638 < 0) {system ("pactl "$1" '${device}' "0)} else {system ("pactl "$1" '${device}' "$3-1638)}}}'
		;;
	"mute")  # toggle mute
		pacmd dump|awk --non-decimal-data '$1~/set-sink-mute/{if ($2~/'${device}'/) {system ("pactl "$1" '${device}' "($3=="yes"?"no":"yes"))}}'
		;;
	"status")
		status
		;;
	*)
		status
		;;
esac
