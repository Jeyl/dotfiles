"--DOT_DIR--/bin/pavolume mute"
 XF86AudioMute

"--DOT_DIR--/bin/pavolume up"
 XF86AudioRaiseVolume

"--DOT_DIR--/bin/pavolume down"
 XF86AudioLowerVolume

# The value will become the nearest multiple of 12.5
"/usr/bin/xbacklight +13 -time 0 -steps 1"
 XF86MonBrightnessUp

"/usr/bin/xbacklight -12 -time 0 -steps 1"
 XF86MonBrightnessDown
